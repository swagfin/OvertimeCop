<AuthorizeView>
    <Authorized>
            <a class="right item" href="Identity/Account/Manage">Hello, @context.User.Identity.Name!</a>
            <form method="post" action="Identity/Account/LogOut">
                <button type="submit" class="ui label">Log out</button>
            </form>
    </Authorized>
    <NotAuthorized>
            <a class="right item" href="Identity/Account/Register">Register</a>
            <a class="item" href="Identity/Account/Login">Log in</a>

    </NotAuthorized>
</AuthorizeView>


